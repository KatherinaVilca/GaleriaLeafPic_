<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"></LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="575dp"
        app:srcCompat="@android:drawable/list_selector_background" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_brillo"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="15dp"
                android:text="Brillo">

            </TextView>

            <SeekBar
                android:id="@+id/SeekBar_brillo"
                android:layout_width="360dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp">

            </SeekBar>

            <TextView
                android:id="@+id/text_contraste"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:text="Contrastre">

            </TextView>

            <SeekBar
                android:id="@+id/SeekBar_contraste"
                android:layout_width="360dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp">

            </SeekBar>

            <TextView
                android:id="@+id/text_saturacion"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:text="Saturacion">

            </TextView>

            <SeekBar
                android:id="@+id/SeekBar_saturacion"
                android:layout_width="360dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp">

            </SeekBar>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
