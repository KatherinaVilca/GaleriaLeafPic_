<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#070707"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_back"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="283dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layoutDirection="inherit"
            android:text="@string/Filtros"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textDirection="firstStrongRtl"
            android:textScaleX="1"
            android:textSize="18sp"
            android:typeface="sans"
            android:verticalScrollbarPosition="defaultPosition" />

        <Button
            android:id="@+id/button_apply"
            android:layout_width="115dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="@string/Aplicar" />

    </LinearLayout>

    <ImageView
        android:id="@+id/show_img"
        android:layout_width="match_parent"
        android:layout_height="549dp"
        app:srcCompat="@drawable/ic_close" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="118dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/Original"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/calvin_header" />

            <ImageView

                android:id="@+id/filter10"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/calvin_header" />

            <ImageView
                android:id="@+id/filter20"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/calvin_header" />

            <ImageView
                android:id="@+id/filter30"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/calvin_header" />

            <ImageView
                android:id="@+id/filter40"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/calvin_header" />

            <ImageView
                android:id="@+id/filter50"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/calvin_header" />

            <ImageView
                android:id="@+id/filter60"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/calvin_header" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"

        android:orientation="horizontal">

        <Button
            android:id="@+id/button_all_filters"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonStyleSmall"
            android:text="@string/filtros" />

        <Button
            android:id="@+id/button_top_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonStyleSmall"
            android:text="@string/mis_favoritos" />
    </LinearLayout>
</LinearLayout>